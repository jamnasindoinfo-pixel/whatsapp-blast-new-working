{
  "name": "waha-plus-api",
  "version": "1.0.0",
  "description": "WhatsApp API with WAHA Plus, Typing Indicator and SQLite Database",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-webhook": "node setup-webhook.js",
    "check-webhook": "node setup-webhook.js check",
    "docker-up": "docker-compose up -d",
    "docker-down": "docker-compose down",
    "docker-logs": "docker-compose logs -f",
    "backup-db": "cp wa_blast.db wa_blast.db.backup",
    "test": "node test-api.js basic",
    "test:all": "node test-api.js all",
    "test:campaign": "node test-api.js campaign",
    "test:help": "node test-api.js help"
  },
  "keywords": [
    "whatsapp",
    "api",
    "waha",
    "automation",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}